{
  "//": "https://github.com/sahat/hackathon-starter",
  "name": "growfolio",
  "version": "0.1.1",
  "description": "A Portfolio Management App",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaiguogit/growfolio"
  },
  "author": "Kai Guo",
  "license": "MIT",
  "scripts": {
    "//": "Go to ./client and run build, output is saved in public folder",
    "build": "yarn upgrade && cd client && yarn upgrade && npm install && npm run build",
    "start": "node app.js",
    "debug": "node --inspect app.js",
    "debug:watch": "nodemon --ignore client/ --inspect app.js",
    "test": "mocha --reporter spec"
  },
  "dependencies": {
    "async": "^2.1.2",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.15.2",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "jquery": "^3.1.1",
    "jsonwebtoken": "^7.2.1",
    "lodash": "^4.17.5",
    "moment": "2.22.0",
    "mongoose": "^4.6.6",
    "morgan": "^1.7.0",
    "numeral": "^2.0.6",
    "passport": "0.3.2",
    "passport-local": "^1.0.0",
    "promise.prototype.finally": "^3.1.0",
    "request": "^2.79.0",
    "request-promise-native": "^1.0.5",
    "validator": "^6.2.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "3.12.2",
    "babel-eslint": "7.1.1",
    "eslint-plugin-import": "2.2.0",
    "mocha": "^3.1.2",
    "sinon": "^1.17.6",
    "sinon-mongoose": "^1.3.0",
    "supertest": "^2.0.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true,
      "jest": true
    },
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "quotes": 0,
      "no-debugger": 1,
      "no-var": 1,
      "semi": [
        1,
        "always"
      ],
      "no-trailing-spaces": 0,
      "eol-last": 0,
      "no-alert": 0,
      "no-lone-blocks": 0
    }
  }
}
